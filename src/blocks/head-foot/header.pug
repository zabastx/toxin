mixin header(type)
    nav
        #logo
            a(href="/")
                img(src='img/logo.png' alt="logo")
        #menu
            ul
                li О нас
                li Услуги
                span.material-icons keyboard_arrow_down
                li Вакансии
                li Новости
                li Соглашения
                span.material-icons keyboard_arrow_down
            .exp-menu Меню
                span.material-icons keyboard_arrow_down
                ul
                    li О нас
                    li Услуги
                    li Вакансии
                    li Новости
                    li Соглашения
            if type
                p Юлий Цезарь
            else
                a(href="login.html")
                    button#login Войти
                a(href="registration.html")
                    button#reg Зарегистрироваться