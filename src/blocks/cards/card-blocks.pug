mixin room-thumb(number, cost, rate, reviews,luxe=false)
        .room-thumb
            .thumbnail
                - for (let i=1; i<=4; i++)
                    div(style=`background-image: url(img/${number}.png)`)
            .info
                div
                    if (luxe)
                        h1 <i>№</i> #{number} 
                            span люкс
                        p <b>#{cost}₽</b> в сутки
                    else
                        h1 <i>№</i> #{number} 
                        p <b>#{cost}₽</b> в сутки
                hr
                div
                    .room-rate
                        each i in [1,2,3,4,5]
                            if (i<=rate)
                                i.material-icons star
                            else
                                i.material-icons star_border
                    p <b>#{reviews}</b> Отзывов
